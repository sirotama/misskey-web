$theme-color = #ec6b43
$theme-color-foreground = #fff

@charset 'utf-8'

::selection
	background $theme-color
	color #fff

*
	tap-highlight-color rgba($theme-color, 0.7)

html
	font-family sans-serif

body > noscript > div
	position fixed
	z-index 16384
	top 0
	left 0
	width 100%
	height 100%
	text-align center
	background #fff

	> p
		display block
		margin 32px
		font-size 2em
		color #555

button
	background transparent
	border none
	box-shadow none
	cursor pointer