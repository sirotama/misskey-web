$theme-color = #fb7b5d
$theme-color-foreground = #fff

@charset 'utf-8'

::selection
	background $theme-color
	color #fff

*
	tap-highlight-color rgba($theme-color, 0.7)

html
	font-family sans-serif

	&.progress
		&, *
			cursor progress !important

		#kyoppie
			filter blur(2px)
			transition filter 0s ease

#kyoppie
	transition filter 0.5s ease

body > noscript > div
	position fixed
	z-index 32768
	top 0
	left 0
	width 100%
	height 100%
	text-align center
	background #fff

	> p
		display block
		margin 32px
		font-size 2em
		color #555

body > #initializing
	position fixed
	z-index 16384
	top 0
	left 0
	width 100%
	height 100%
	text-align center
	background #fff
	cursor wait

	> p
		display block
		margin 32px
		font-size 4em
		color #555

		-ms-user-select none
		-moz-user-select none
		-webkit-user-select none
		user-select none

		> span
			animation ellipsis 1.4s infinite ease-in-out both

			&:nth-child(1)
				animation-delay -0.32s
			
			&:nth-child(2)
				animation-delay -0.16s

		@keyframes ellipsis
			0%, 80%, 100%
				opacity 1
			40%
				opacity 0

button
	background transparent
	border none
	box-shadow none
	cursor pointer

mk-locker
	display block
	position fixed
	top 0
	left 0
	z-index 65536
	width 100%
	height 100%
	cursor wait

#nprogress
	pointer-events none

	position absolute
	z-index 65536

	.bar
		background $theme-color

		position fixed
		z-index 65537
		top 0
		left 0

		width 100%
		height 2px

	/* Fancy blur effect */
	.peg
		display block
		position absolute
		right 0px
		width 100px
		height 100%
		box-shadow 0 0 10px $theme-color, 0 0 5px $theme-color
		opacity 1

		transform rotate(3deg) translate(0px, -4px)
