{
	"compilerOptions": {
		"noEmitOnError": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"sourceMap": false,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"noLib": true,
		"outDir": "built",
		"rootDir": "src"
	},
	"compileOnSave": false,
	"atom": {
		"rewriteTsconfig": true
	},
	"filesGlob": [
		"./node_modules/typescript/lib/lib.es6.d.ts",
		"./typings/bundle.d.ts",
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"files": [
		"./node_modules/typescript/lib/lib.es6.d.ts",
		"./typings/bundle.d.ts",
		"./src/api/account/create.ts",
		"./src/api/album/upload.ts",
		"./src/api/avatar/update.ts",
		"./src/api/banner/update.ts",
		"./src/api/display-image-quality/update.ts",
		"./src/api/home/update.ts",
		"./src/api/mobile-header-overlay/update.ts",
		"./src/api/posts/create-with-file.ts",
		"./src/api/pseudo-push-notification-display-duration/update.ts",
		"./src/api/url/analyze.ts",
		"./src/api/user-settings/update.ts",
		"./src/argv.ts",
		"./src/check-dependencies.ts",
		"./src/config.ts",
		"./src/core/api.ts",
		"./src/core/signin.ts",
		"./src/db/db.ts",
		"./src/db/models/post.ts",
		"./src/db/models/user-settings.ts",
		"./src/db/models/user.ts",
		"./src/index.ts",
		"./src/router.ts",
		"./src/server.ts"
	]
}
